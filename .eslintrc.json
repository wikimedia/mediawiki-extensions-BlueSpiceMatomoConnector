{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"parserOptions": {
		"sourceType": "commonjs",
		"ecmaVersion": 2020
	},
	"globals": {
		"bs": "readonly",
		"BsMatomoConnector": "writable",
		"_paq": "readonly"
	},
	"rules": {
		"es-x/no-array-prototype-includes": "off",
		"es-x/no-optional-chaining": "off",
		"max-len": "off",
		"no-jquery/no-global-selector": "off",
		"no-prototype-builtins": "off"
	}
}
